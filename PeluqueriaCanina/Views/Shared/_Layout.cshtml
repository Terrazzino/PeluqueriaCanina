<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PeluqueriaCanina</title>

    <!-- Estilos -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.7/main.min.css' rel='stylesheet' />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PeluqueriaCanina.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

    <style>
        /* ===== MODO OSCURO GLOBAL ===== */
        body {
            margin: 0;
            background: #0d1117; /* fondo oscuro elegante */
            color: #e6edf3;
            font-family: 'Segoe UI', sans-serif;
        }

        /* Contenido centrado más agradable */
        main {
            padding-top: 30px;
            padding-bottom: 40px;
        }

        /* Tarjetas tipo “glass” */
        .glass-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(6px);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.12);
            padding: 25px;
        }

        /* Botones más modernos */
        .btn-dark, .btn-secondary, .btn-info {
            border-radius: 10px;
            padding: 12px;
            font-size: 1.05rem;
            font-weight: 500;
        }

        /* Títulos suaves */
        h1, h2, h3, h4 {
            color: #f0f6fc;
        }

        /* Para evitar fondos blancos de Bootstrap */
        .card, .modal-content {
            background-color: #161b22 !important;
            color: #e6edf3;
        }

        /* Scrollbar estilizada */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: #30363d;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #484f58;
            }
    </style>
</head>
<body>

    <!-- Contenido dinámico -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.7/main.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/moment.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
