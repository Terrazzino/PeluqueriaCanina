@using PeluqueriaCanina.Models.ClasesDeAdministrador
@model IEnumerable<Servicio>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">Servicios</h2>
    <a asp-action="Crear" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nuevo Servicio
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Duración</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var servicio in Model)
                {
                    <tr>
                        <td>@servicio.NombreDelServicio</td>
                        <td>@servicio.Descripcion</td>
                        <td>$@servicio.Precio</td>
                        <td>@servicio.Duracion.ToString(@"hh\:mm")</td>
                        <td class="text-center">
                            <a asp-action="Editar" asp-route-id="@servicio.Id"
                               class="btn btn-warning btn-sm me-2">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Eliminar" asp-route-id="@servicio.Id"
                               class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
