@using PeluqueriaCanina.Models.ClasesDeAdministrador
@model IEnumerable<Servicio>

<div class="overlay-dark p-4">
    <div class="container">

        <!-- Encabezado -->
        <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
            <div>
                <h2 class="text-light fw-bold mb-1">Servicios</h2>
                <p class="text-secondary mb-0">Gestión de los servicios ofrecidos</p>
            </div>

            <div class="d-flex gap-2 mt-2 mt-md-0">
                <a asp-controller="Administrador" asp-action="Dashboard"
                   class="btn btn-outline-light btn-rounded shadow-sm">
                    Volver al Inicio
                </a>

                <a asp-action="Crear" class="btn btn-success btn-rounded shadow-sm">
                    Nuevo Servicio
                </a>
            </div>
        </div>

        <!-- Card contenedora -->
        <div class="card card-custom text-light">
            <div class="card-body p-0">

                <table class="table table-dark table-hover align-middle mb-0">
                    <thead class="table-header-gradient text-center">
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Duración</th>
                            <th style="width: 160px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var servicio in Model)
                        {
                            <tr>
                                <td>@servicio.NombreDelServicio</td>
                                <td>@servicio.Descripcion</td>
                                <td>$@servicio.Precio</td>
                                <td>
                                    @(servicio.Duracion is TimeSpan ts
                                                                    ? ts.ToString(@"hh\:mm")
                                                                    : servicio.Duracion.ToString())
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Editar" asp-route-id="@servicio.Id"
                                       class="btn btn-warning btn-sm btn-rounded shadow-sm w-100">
                                        Editar
                                    </a>
                                    <a asp-action="Eliminar" asp-route-id="@servicio.Id"
                                       class="btn btn-danger btn-sm btn-rounded shadow-sm w-100"
                                       onclick="return confirm('¿Seguro que deseas eliminar este servicio?');">
                                        Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                                                }
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>
