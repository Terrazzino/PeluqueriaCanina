@model PeluqueriaCanina.Models.ClasesDeAdministrador.Servicio

@{
    ViewData["Title"] = "Crear Servicio";
}

<div class="glass-card mt-4 fade-in">
    <h2 class="text-warning mb-4">✨ Crear Nuevo Servicio</h2>

    <form asp-action="Crear" method="post">
        @Html.Partial("_FormularioServicio", Model)

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left"></i> Volver
            </a>

            <button type="submit" class="btn btn-success px-4">
                <i class="bi bi-check2-circle"></i> Guardar
            </button>
        </div>
    </form>
</div>
