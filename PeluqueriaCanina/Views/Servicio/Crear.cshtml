@model PeluqueriaCanina.Models.ClasesDeAdministrador.Servicio

<div class="overlay-dark p-4">
    <div class="container">

        <!-- Encabezado -->
        <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
            <div>
                <h2 class="text-light fw-bold mb-1">Crear Nuevo Servicio</h2>
                <p class="text-secondary mb-0">Alta de servicios y configuración</p>
            </div>

            <div class="d-flex gap-2 mt-2 mt-md-0">
                <a asp-controller="Administrador" asp-action="Dashboard"
                   class="btn btn-outline-light btn-rounded shadow-sm">
                    Volver al Inicio
                </a>
            </div>
        </div>

        <!-- Card principal -->
        <div class="card card-custom text-light shadow-lg rounded-4 border-secondary">
            <div class="card-body p-4">

                <form asp-action="Crear" method="post">
                    @Html.Partial("_FormularioServicio", Model)

                    <!-- Botones -->
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-outline-light btn-rounded shadow-sm">
                            Volver
                        </a>

                        <button type="submit" class="btn btn-success btn-rounded shadow-sm px-4">
                            Guardar
                        </button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>
