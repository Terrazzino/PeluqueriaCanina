@model PeluqueriaCanina.Models.ClasesDeAdministrador.Servicio

@{
    ViewData["Title"] = "Editar Servicio";
}

<div class="glass-card mt-4 fade-in">
    <h2 class="text-warning mb-4">✏️ Editar Servicio</h2>

    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="Id" />

        @Html.Partial("_FormularioServicio", Model)

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left"></i> Volver
            </a>

            <button type="submit" class="btn btn-success px-4">
                <i class="bi bi-save"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>
