@model PeluqueriaCanina.Models.ClasesDeAdministrador.Servicio

<div class="mb-3">
    <label asp-for="NombreDelServicio" class="form-label fw-bold"></label>
    <input asp-for="NombreDelServicio" class="form-control dark-input" placeholder="Ej: Baño completo" />
    <span asp-validation-for="NombreDelServicio" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Descripcion" class="form-label fw-bold"></label>
    <textarea asp-for="Descripcion"
              rows="3"
              class="form-control dark-input"
              placeholder="Detalles del servicio..."></textarea>
    <span asp-validation-for="Descripcion" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Precio" class="form-label fw-bold"></label>
    <div class="input-group">
        <span class="input-group-text bg-dark text-light border-0">$</span>
        <input asp-for="Precio"
               type="number"
               step="0.01"
               class="form-control dark-input"
               placeholder="0.00" />
    </div>
    <span asp-validation-for="Precio" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Duracion" class="form-label fw-bold"></label>
    <input asp-for="Duracion"
           type="time"
           class="form-control dark-input" />
    <span asp-validation-for="Duracion" class="text-danger"></span>
</div>
