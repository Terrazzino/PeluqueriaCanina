@model PeluqueriaCanina.Models.ClasesDeCliente.Mascota

@{
    ViewData["Title"] = "Editar Mascota";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0">Editar Mascota</h4>
    </div>
    <div class="card-body">
        <form asp-action="Editar" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Raza" class="form-label"></label>
                <input asp-for="Raza" class="form-control" />
                <span asp-validation-for="Raza" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaDeNacimiento" class="form-label"></label>
                <input asp-for="FechaDeNacimiento" type="date" class="form-control" />
                <span asp-validation-for="FechaDeNacimiento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Peso" class="form-label"></label>
                <input asp-for="Peso" type="number" step="0.1" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">↩️ Volver</a>
                <button type="submit" class="btn btn-warning">💾 Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>
