@model PeluqueriaCanina.Models.ClasesDeCliente.Mascota

@{
    ViewData["Title"] = "Editar Mascota";
}

<div class="glass-card mt-4">

    <h3 class="text-warning mb-4 fw-semibold">
        ✏️ Editar Mascota
    </h3>

    <form asp-action="Editar" method="post">

        <input type="hidden" asp-for="Id" />

        <!-- Nombre -->
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label text-white"></label>
            <input asp-for="Nombre" class="form-control dark-input" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <!-- Raza -->
        <div class="mb-3">
            <label asp-for="Raza" class="form-label text-white"></label>
            <input asp-for="Raza" class="form-control dark-input" />
            <span asp-validation-for="Raza" class="text-danger"></span>
        </div>

        <!-- Fecha de Nacimiento -->
        <div class="mb-3">
            <label asp-for="FechaDeNacimiento" class="form-label text-white"></label>
            <input asp-for="FechaDeNacimiento" type="date" class="form-control dark-input" />
            <span asp-validation-for="FechaDeNacimiento" class="text-danger"></span>
        </div>

        <!-- Peso -->
        <div class="mb-3">
            <label asp-for="Peso" class="form-label text-white"></label>
            <input asp-for="Peso" type="number" step="0.1" class="form-control dark-input" />
            <span asp-validation-for="Peso" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary rounded-2">↩️ Volver</a>
            <button type="submit" class="btn btn-warning text-dark rounded-2 fw-semibold">
                💾 Guardar Cambios
            </button>
        </div>

    </form>
</div>
