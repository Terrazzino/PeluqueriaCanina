@model PeluqueriaCanina.Models.ClasesDeCliente.Mascota

@{
    ViewData["Title"] = "Registrar Mascota";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0">Registrar Mascota</h4>
    </div>
    <div class="card-body">
        <form asp-action="Crear" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Raza" class="form-label"></label>
                <input asp-for="Raza" class="form-control" />
                <span asp-validation-for="Raza" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaDeNacimiento" class="form-label"></label>
                <input asp-for="FechaDeNacimiento" type="date" class="form-control" />
                <span asp-validation-for="FechaDeNacimiento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Peso" class="form-label"></label>
                <input asp-for="Peso" type="number" step="0.1" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">↩️ Volver</a>
                <button type="submit" class="btn btn-success">💾 Guardar</button>
            </div>
        </form>
    </div>
</div>
