@model PeluqueriaCanina.Models.ClasesDeCliente.Mascota

@{
    ViewData["Title"] = "Eliminar Mascota";
}

<div class="glass-card mt-4 border border-danger">

    <h3 class="text-danger mb-4 fw-semibold">
        🗑️ Eliminar Mascota
    </h3>

    <div class="alert alert-danger bg-opacity-75">
        ⚠️ ¿Estás seguro que querés eliminar a <strong>@Model.Nombre</strong>?
    </div>

    <form asp-action="Eliminar" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="d-flex justify-content-between mt-4">

            <a asp-action="Index" class="btn btn-outline-secondary rounded-2">
                ↩️ Cancelar
            </a>

            <button type="submit" class="btn btn-danger rounded-2 fw-semibold">
                🗑️ Eliminar
            </button>

        </div>

    </form>

</div>
