@model PeluqueriaCanina.Models.ClasesDePago.Pago

@{
    ViewData["Title"] = "Comprobante de Pago";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- Botones de acción -->
            <div class="d-flex justify-content-between mb-3 no-print">
                <a href="/Pago/MisPagos" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a Mis Turnos
                </a>

                <button onclick="window.print()" class="btn btn-outline-primary">
                    <i class="bi bi-printer"></i> Imprimir
                </button>
            </div>

            <!-- Comprobante -->
            <div class="dark-card shadow-sm p-0" id="comprobante">
                <div class="card-header text-center bg-success text-white py-4">
                    <h3 class="mb-1">Peluquería Canina</h3>
                    <small class="opacity-75">Comprobante de Pago</small>
                </div>

                <div class="card-body px-4 pb-4">

                    <!-- Estado del Pago -->
                    <div class="text-center mb-4">
                        @switch (Model.Estado.ToString())
                        {
                            case "Aprobado":
                                <div class="alert alert-success py-3 fw-bold">
                                    <i class="bi bi-check-circle-fill me-2"></i>PAGO APROBADO
                                </div>
                                break;

                            case "Procesando":
                                <div class="alert alert-warning py-3 fw-bold">
                                    <i class="bi bi-clock-fill me-2"></i>PAGO EN PROCESO
                                </div>
                                break;

                            case "Pendiente":
                                <div class="alert alert-info py-3 fw-bold">
                                    <i class="bi bi-hourglass-split me-2"></i>PAGO PENDIENTE
                                </div>
                                break;

                            case "Rechazado":
                                <div class="alert alert-danger py-3 fw-bold">
                                    <i class="bi bi-x-circle-fill me-2"></i>PAGO RECHAZADO
                                </div>
                                break;
                        }
                    </div>

                    <!-- Información del Pago -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p><strong>N° de Pago:</strong> #@Model.Id.ToString("D6")</p>
                            <p><strong>Fecha:</strong> @Model.FechaPago.ToString("dd/MM/yyyy HH:mm")</p>

                            <p>
                                <strong>Método:</strong>
                                @switch (Model.MetodoPago.ToString())
                                {
                                    case "Efectivo":
                                        <span>Efectivo</span>
                                        break;
                                    case "TarjetaDebito":
                                        <span>Tarjeta de Débito</span>
                                        break;
                                    case "TarjetaCredito":
                                        <span>Tarjeta de Crédito</span>
                                        break;
                                    case "MercadoPago":
                                        <span>Mercado Pago</span>
                                        break;
                                    case "Transferencia":
                                        <span>Transferencia</span>
                                        break;
                                }
                            </p>

                            @if (!string.IsNullOrEmpty(Model.NumeroTransaccion))
                            {
                                <p><strong>N° Transacción:</strong> @Model.NumeroTransaccion</p>
                            }

                            @if (!string.IsNullOrEmpty(Model.Ultimos4Digitos))
                            {
                                <p><strong>Tarjeta:</strong> **** **** **** @Model.Ultimos4Digitos</p>
                            }
                        </div>

                        <div class="col-md-6 text-md-end">
                            <h1 class="text-success fw-bold">$@Model.Monto.ToString("N2")</h1>
                            <p class="text-muted">Monto Pagado</p>
                        </div>
                    </div>

                    <hr>

                    <!-- Información del Turno -->
                    <h5 class="mb-3">Detalles del Servicio</h5>

                    <div class="table-responsive table-container">
                        <table class="table table-dark table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Servicio</th>
                                    <th>Mascota</th>
                                    <th>Fecha/Hora</th>
                                    <th>Peluquero</th>
                                    <th class="text-end">Precio</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Turno.Servicio.NombreDelServicio</td>
                                    <td>@Model.Turno.Mascota.Nombre</td>
                                    <td>
                                        @Model.Turno.FechaHora.ToString("dd/MM/yyyy")<br>
                                        <small class="text-muted">@Model.Turno.FechaHora.ToString("HH:mm")</small>
                                    </td>
                                    <td>@Model.Turno.Peluquero.Nombre @Model.Turno.Peluquero.Apellido</td>
                                    <td class="text-end">$@Model.Monto.ToString("N2")</td>
                                </tr>
                            </tbody>
                            <tfoot class="table-dark">
                                <tr>
                                    <td colspan="4" class="text-end"><strong>TOTAL:</strong></td>
                                    <td class="text-end fw-bold">$@Model.Monto.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Observaciones))
                    {
                        <hr>
                        <p><strong>Observaciones:</strong></p>
                        <p class="text-muted">@Model.Observaciones</p>
                    }

                    <hr>

                    <!-- Pie -->
                    <div class="text-center text-muted small mt-3">
                        <p class="mb-1">Gracias por confiar en nosotros</p>
                        <p class="mb-0">Peluquería Canina - Tel: (0341) 123-4567</p>
                        <p class="mb-0">Email: info@peluqueriacanina.com</p>
                    </div>
                </div>
            </div>

            @if (Model.Estado == PeluqueriaCanina.Models.ClasesDePago.EstadoPago.Procesando)
            {
                <div class="alert alert-info mt-3 no-print">
                    <h6><i class="bi bi-info-circle"></i> Información</h6>
                    <p class="mb-0">Tu pago está siendo procesado. Vas a recibir una notificación cuando se apruebe.</p>
                </div>
            }
        </div>
    </div>
</div>

