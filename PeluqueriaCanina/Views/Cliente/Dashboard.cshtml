@{
    ViewData["Title"] = "Dashboard";
}

<!-- Botón cerrar sesión -->
<div class="d-flex justify-content-end mt-3">
    <a asp-controller="Perfil" asp-action="MiPerfil" class="btn btn-outline-light">
        Mi Perfil
    </a>


    <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-danger">
        <i class="bi bi-box-arrow-right"></i> Cerrar sesión
    </a>
</div>

<!-- CARD PRINCIPAL -->
<div class="glass-card mt-4">
    <div class="mb-4">
        <h2 class="text-white fw-semibold">Bienvenido @ViewBag.Nombre 👋</h2>
        <p class="text-secondary mb-0">
            Desde aquí podés manejar todo lo relacionado a tus
            <strong class="text-white">mascotas</strong> y
            <strong class="text-white">turnos</strong>.
        </p>
    </div>

    <div class="row g-4">

        <!-- 🐶 Mascotas -->
        <div class="col-md-4">
            <div class="glass-card h-100 p-0">
                <div class="p-3 border-bottom" style="border-color: rgba(255,255,255,0.12) !important;">
                    <h5 class="text-info mb-0">🐶 Mis Mascotas</h5>
                </div>
                <div class="p-3 d-flex flex-column">
                    <p class="text-secondary flex-grow-1">
                        Registrar, editar o eliminar tus mascotas.
                    </p>
                    <a href="/Mascota/Index" class="btn btn-info text-white mt-auto rounded-2">
                        Ir a Mascotas
                    </a>
                </div>
            </div>
        </div>

        <!-- 📅 Turnos -->
        <div class="col-md-4">
            <div class="glass-card h-100 p-0">
                <div class="p-3 border-bottom" style="border-color: rgba(255,255,255,0.12) !important;">
                    <h5 class="text-success mb-0">📅 Turnos</h5>
                </div>
                <div class="p-3 d-flex flex-column">
                    <p class="text-secondary flex-grow-1">
                        Solicitá un turno para una de tus mascotas.
                    </p>
                    <a href="/Turno/Index" class="btn btn-success mt-auto rounded-2">
                        Ir a Turnos
                    </a>
                </div>
            </div>
        </div>

        <!-- 🩺 Turnos Veterinaria -->
        <div class="col-md-4">
            <div class="glass-card h-100 p-0">
                <div class="p-3 border-bottom" style="border-color: rgba(255,255,255,0.12) !important;">
                    <h5 class="text-warning mb-0">🩺 Turnos Veterinaria</h5>
                </div>
                <div class="p-3 d-flex flex-column">
                    <p class="text-secondary flex-grow-1">
                        Reservá un turno en la veterinaria.
                    </p>
                    <a href="/Veterinaria/Reservar" class="btn btn-warning mt-auto rounded-2 text-white">
                        Reservar Turno Vet
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
