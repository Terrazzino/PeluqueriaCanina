@model List<PeluqueriaCanina.Models.ClasesDeCliente.Valoracion>

@{
    ViewData["Title"] = "Valoraciones de Peluqueros";
}

<h2 class="mt-3">⭐ Valoraciones de Peluqueros</h2>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">No hay valoraciones registradas.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Peluquero</th>
                <th>Cliente</th>
                <th>Puntuación</th>
                <th>Comentario</th>
                <th>Fecha</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.Peluquero.Nombre @v.Peluquero.Apellido</td>
                    <td>@v.Cliente.Nombre @v.Cliente.Apellido</td>
                    <td>@v.Puntuacion ★</td>
                    <td>@v.Comentario</td>
                    <td>@v.FechaValoracion.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
