@model List<PeluqueriaCanina.Models.ClasesDeCliente.Valoracion>

<div class="overlay-dark p-4">
    <div class="container">

        <!-- Encabezado -->
        <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
            <div>
                <h2 class="text-light fw-bold mb-1">Valoraciones de Peluqueros</h2>
                <p class="text-secondary mb-0">Reseñas y puntuaciones dejadas por los clientes</p>
            </div>

            <div class="d-flex gap-2 mt-2 mt-md-0">
                <a asp-controller="Administrador" asp-action="Dashboard"
                   class="btn btn-outline-light btn-rounded shadow-sm">
                    Volver al Inicio
                </a>
            </div>
        </div>

        <!-- Card principal -->
        <div class="card card-custom text-light">
            <div class="card-body p-4">

                @if (!Model.Any())
                {
                    <div class="alert alert-info">
                        No hay valoraciones registradas.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle mb-0 rounded overflow-hidden">
                            <thead class="table-header-gradient text-light text-center">
                                <tr>
                                    <th>Peluquero</th>
                                    <th>Cliente</th>
                                    <th>Puntuación</th>
                                    <th>Comentario</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var v in Model)
                                {
                                    <tr>
                                        <td>@v.Peluquero.Nombre @v.Peluquero.Apellido</td>
                                        <td>@v.Cliente.Nombre @v.Cliente.Apellido</td>
                                        <td>
                                            @for (int i = 0; i < 5; i++)
                                            {
                                                if (i < v.Puntuacion)
                                                {
                                                    <span class="text-warning">&#9733;</span> @* estrella llena *@
                                                }
                                                else
                                                {
                                                    <span class="text-secondary">&#9734;</span> @* estrella vacía *@
                                                }
                                            }
                                        </td>
                                        <td>@v.Comentario</td>
                                        <td>@v.FechaValoracion.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

            </div>
        </div>

    </div>
</div>
