@{
    ViewData["Title"] = "Correo Enviado";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">

    <div class="col-md-6 col-lg-4">

        <!-- MISMO PANEL DE VIDRIO QUE EL RESTO -->
        <div class="form-container glass text-light text-center">

            <h3 class="mb-3 fw-bold" style="letter-spacing:1px;">¡Listo!</h3>

            <p class="mb-4" style="color: #e3e9ef;">
                Si existe un usuario con ese correo, se envió un enlace para restablecer la contraseña.
            </p>

            <div class="d-grid">
                <a asp-action="Login" class="btn-neo text-decoration-none text-center">
                    Volver al inicio de sesión
                </a>
            </div>

        </div>

    </div>
</div>
