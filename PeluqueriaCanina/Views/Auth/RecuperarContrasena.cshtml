@model RecuperarContrasenaVM

@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 75vh;">

    <div class="col-md-6 col-lg-4">

        <!-- MISMO PANEL DE VIDRIO -->
        <div class="form-container glass text-light">

            <h3 class="text-center mb-4 fw-bold" style="letter-spacing:1px;">
                Recuperar Contraseña
            </h3>

            <form asp-action="RecuperarContrasena" method="post">
                <div class="mb-3">
                    <label for="mail" class="form-label">Correo electrónico</label>
                    <input asp-for="Mail"
                           id="mail"
                           class="form-control glass-input"
                           placeholder="tu@mail.com"
                           required />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn-neo">
                        Enviar enlace de recuperación
                    </button>
                </div>
            </form>

            <div class="mt-4 text-center">
                <a asp-action="Login" class="fw-semibold text-decoration-none" style="color:#9dd3ff;">
                    Volver al inicio de sesión
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
