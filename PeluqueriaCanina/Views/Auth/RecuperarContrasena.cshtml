@model RecuperarContrasenaVM

@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg rounded-4 p-4 bg-dark text-light">
            <h3 class="text-center mb-4 fw-bold">Recuperar Contraseña</h3>

            <form asp-action="RecuperarContrasena" method="post">
                <div class="mb-3">
                    <label for="mail" class="form-label">Correo electrónico</label>
                    <input asp-for="Mail" class="form-control" id="mail" placeholder="tu@mail.com" required />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-semibold">Enviar enlace de recuperación</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Login" class="text-info">Volver al inicio de sesión</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
