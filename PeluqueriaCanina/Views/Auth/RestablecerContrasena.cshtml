@model RestablecerContrasenaVM
@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 75vh;">

    <div class="col-md-6 col-lg-4">

        <!-- PANEL GLASS -->
        <div class="form-container glass text-light">

            <h3 class="text-center mb-4 fw-bold" style="letter-spacing:1px;">
                Restablecer Contraseña
            </h3>

            <form asp-action="RestablecerContrasena" method="post">

                <!-- HIDDEN -->
                <input type="hidden" asp-for="Mail" />
                <input type="hidden" asp-for="Token" />

                <!-- NUEVA CONTRASEÑA -->
                <div class="mb-3">
                    <label for="nueva" class="form-label">Nueva contraseña</label>
                    <input asp-for="NuevaContrasena"
                           type="password"
                           id="nueva"
                           class="form-control glass-input"
                           required />
                    <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
                </div>

                <!-- CONFIRMAR CONTRASEÑA -->
                <div class="mb-3">
                    <label for="confirmar" class="form-label">Confirmar contraseña</label>
                    <input asp-for="ConfirmarContrasena"
                           type="password"
                           id="confirmar"
                           class="form-control glass-input"
                           required />
                    <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                </div>

                <!-- BOTÓN NEO -->
                <div class="d-grid mt-4">
                    <button type="submit" class="btn-neo">
                        Restablecer contraseña
                    </button>
                </div>

            </form>

            <!-- LINK -->
            <div class="mt-4 text-center">
                <a asp-action="Login"
                   class="fw-semibold text-decoration-none"
                   style="color:#9dd3ff;">
                    Volver al inicio de sesión
                </a>
            </div>

        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
