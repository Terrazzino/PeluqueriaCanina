@{
    ViewData["Title"] = "Registro";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">

    <div class="col-md-8 col-lg-6">

        <!-- MISMO PANEL DE VIDRIO QUE LOGIN -->
        <div class="form-container glass text-light">
            <h2 class="text-center mb-4 fw-bold" style="letter-spacing:1px;">
                Registro de Cliente
            </h2>

            <form asp-action="Register" method="post">

                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input type="text"
                           name="nombre"
                           class="form-control glass-input"
                           required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Apellido</label>
                    <input type="text"
                           name="apellido"
                           class="form-control glass-input"
                           required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email"
                           name="mail"
                           class="form-control glass-input"
                           required />
                </div>

                <div class="mb-3">
                    <label class="form-label">DNI</label>
                    <input type="text"
                           name="dni"
                           class="form-control glass-input"
                           required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Fecha de nacimiento</label>
                    <input type="date"
                           name="fechaDeNacimiento"
                           class="form-control glass-input"
                           required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <input type="password"
                           name="contraseña"
                           class="form-control glass-input"
                           required />
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center rounded-3" role="alert">
                        @ViewBag.Error
                    </div>
                }

                <div class="d-grid mt-4">
                    <button type="submit" class="btn-neo">
                        Registrarse
                    </button>
                </div>

            </form>

            <div class="text-center mt-4">
                <a asp-action="Login" class="fw-semibold text-decoration-none" style="color:#9dd3ff;">
                    ¿Ya tenés cuenta? <span style="color:#66b2ff;">Iniciá sesión</span>
                </a>
            </div>

        </div>
    </div>
</div>
