@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg rounded-3">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Iniciar Sesión</h2>

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="mail" class="form-control" placeholder="tuemail@mail.com" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input type="password" name="contraseña" class="form-control" placeholder="********" required />
                        </div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger text-center" role="alert">
                                @ViewBag.Error
                            </div>
                        }

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Ingresar</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Register">¿No tenés cuenta? Registrate</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
