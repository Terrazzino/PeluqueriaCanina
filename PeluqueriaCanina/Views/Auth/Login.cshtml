@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">

    <div class="col-md-6 col-lg-4">

        <!-- PANEL DE VIDRIO -->

        <div class="form-container glass text-light">
            <h2 class="text-center mb-4 fw-bold" style="letter-spacing:1px;">
                Iniciar Sesión
            </h2>
            <form asp-action="Login" method="post">

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email"
                           name="mail"
                           class="form-control glass-input"
                           placeholder="tuemail@mail.com"
                           required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <input type="password"
                           name="contraseña"
                           class="form-control glass-input"
                           placeholder="********"
                           required />
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center rounded-3" role="alert">
                        @ViewBag.Error
                    </div>
                }

                <div class="d-grid mt-4">
                    <button type="submit" class="btn-neo">
                        Ingresar
                    </button>
                </div>

            </form>

            <div class="text-center mt-4">
                <a asp-action="Register" class="fw-semibold text-decoration-none" style="color:#9dd3ff;">
                    ¿No tenés cuenta? <span style="color:#66b2ff;">Registrate</span>
                </a>
            </div>

            <div class="text-center mt-2">
                <a asp-action="RecuperarContrasena" class="fw-semibold text-decoration-none" style="color:#9dd3ff;">
                    ¿Olvidaste tu contraseña?
                </a>
            </div>
        </div>
    </div>
</div>
