@{
    ViewData["Title"] = "Agenda del Peluquero";
}

<div class="agenda-container fade-in">

    <div class="d-flex justify-content-end mt-3">
        <a asp-controller="Perfil" asp-action="MiPerfil" class="btn btn-outline-light">
            Mi Perfil
        </a>

        <a asp-controller="Auth" asp-action="Logout" class="btn btn-logout">
            <i class="bi bi-box-arrow-right"></i> Cerrar sesión
        </a>
    </div>

    <div class="card custom-card mt-4 shadow-lg border-0">
        <div class="card-header custom-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">📅 Mi Agenda</h4>
            <span id="estadoSeleccionado" class="fw-bold"></span>
        </div>

        <div class="card-body custom-body">
            <div id="calendar"></div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.9/index.global.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const calendarEl = document.getElementById('calendar');
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'timeGridWeek',
                locale: 'es',
                slotDuration: '00:30:00',
                allDaySlot: false,
                nowIndicator: true,
                height: "auto",

                events: '@Url.Action("GetTurnos", "Peluquero")',

                eventClick: function (info) {
                    const turnoId = info.event.id;
                    const estadoActual = info.event.extendedProps.estado;

                    Swal.fire({
                        title: `Turno: ${info.event.title}`,
                        html: `
                            <p><b>Estado actual:</b> ${estadoActual}</p>
                            <p>¿Qué acción desea realizar?</p>
                        `,
                        background: "#1c1c1c",
                        color: "#fff",
                        showCancelButton: true,
                        showDenyButton: true,
                        confirmButtonText: '✅ Completar',
                        denyButtonText: '📅 Confirmar',
                        cancelButtonText: '❌ Cancelar',
                    }).then((result) => {
                        let nuevoEstado = null;
                        if (result.isConfirmed) nuevoEstado = "Completado";
                        else if (result.isDenied) nuevoEstado = "Confirmado";
                        else if (result.dismiss === Swal.DismissReason.cancel) nuevoEstado = "Cancelado";

                        if (nuevoEstado) {
                            $.post('@Url.Action("CambiarEstado", "Peluquero")', { turnoId: turnoId, nuevoEstado: nuevoEstado })
                                .done(() => {
                                    Swal.fire({
                                        icon: "success",
                                        title: `Estado cambiado a ${nuevoEstado}`,
                                        timer: 1500,
                                        background: "#1c1c1c",
                                        color: "#fff",
                                        showConfirmButton: false
                                    });
                                    calendar.refetchEvents();
                                })
                                .fail(() => {
                                    Swal.fire({
                                        icon: "error",
                                        title: "Error al actualizar el estado",
                                        background: "#1c1c1c",
                                        color: "#fff"
                                    });
                                });
                        }
                    });
                }
            });

            calendar.render();
        });
    </script>
}
