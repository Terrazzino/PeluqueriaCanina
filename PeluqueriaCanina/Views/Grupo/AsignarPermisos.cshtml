@model AsignarPermisosViewModel

<div class="overlay-dark p-4">
    <div class="container d-flex justify-content-center">

        <!-- Card principal -->
        <div class="card card-custom text-light shadow-lg rounded-4 p-4 w-100" style="max-width: 700px;">

            <!-- Encabezado -->
            <div class="mb-4 text-center">
                <h2 class="fw-bold mb-1">Permisos de @Model.NombreGrupo</h2>
                <p class="text-secondary mb-0">Gestión de permisos asignados al grupo</p>
            </div>

            <!-- Formulario de permisos -->
            <form method="post" asp-action="AsignarPermisos">
                <input type="hidden" name="id" value="@Model.GrupoId" />

                <div class="list-group mb-4">
                    @foreach (var permiso in Model.PermisosDisponibles)
                    {
                        <label class="text-white list-group-item list-group-item-dark d-flex justify-content-between align-items-center rounded-3 mb-1">
                            <span>@permiso</span>
                            <input type="checkbox"
                                   name="permisosSeleccionados"
                                   value="@permiso"
                                   @(Model.PermisosAsignados.Contains(permiso) ? "checked" : "") />
                        </label>
                    }
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-center gap-2 mt-3">
                    <button type="submit" class="btn btn-primary btn-rounded shadow-sm px-4">
                        Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light btn-rounded shadow-sm px-4">
                        Volver
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>
