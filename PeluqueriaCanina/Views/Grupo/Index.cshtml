@{
    ViewData["Title"] = "Grupos";
}

<div class="overlay-dark p-4">
    <div class="container">

        <!-- Encabezado -->
        <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
            <div>
                <h2 class="text-light fw-bold mb-1">Grupos de Usuarios</h2>
                <p class="text-secondary mb-0">Gestión de roles y permisos dentro del sistema</p>
            </div>

            <div class="d-flex gap-2 mt-2 mt-md-0">
                <a asp-controller="Administrador" asp-action="Dashboard"
                   class="btn btn-outline-light btn-rounded shadow-sm">
                    Volver al Inicio
                </a>

                <a asp-action="Crear"
                   class="btn btn-primary btn-rounded shadow-sm">
                    Crear Grupo
                </a>
            </div>
        </div>

        <!-- Card contenedora -->
        <div class="card card-custom text-light">
            <div class="card-body p-0">

                <table class="table table-dark table-hover align-middle mb-0">
                    <thead class="table-header-gradient text-center">
                        <tr>
                            <th>Nombre</th>
                            <th style="width: 220px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var g in Model)
                        {
                            <tr>
                                <td>@g.Nombre</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Editar" asp-route-id="@g.Id"
                                           class="btn btn-warning btn-sm btn-rounded shadow-sm w-100">
                                            Editar
                                        </a>
                                        <a asp-action="AsignarPermisos" asp-route-id="@g.Id"
                                           class="btn btn-info btn-sm btn-rounded shadow-sm w-100">
                                            Permisos
                                        </a>
                                        <a asp-action="Eliminar" asp-route-id="@g.Id"
                                           class="btn btn-danger btn-sm btn-rounded shadow-sm w-100"
                                           onclick="return confirm('¿Seguro que deseas eliminar este grupo?');">
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>
