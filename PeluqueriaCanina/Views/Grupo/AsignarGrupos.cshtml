@model PeluqueriaCanina.Models.Users.Persona
@{
    var grupos = ViewBag.Grupos as List<PeluqueriaCanina.Models.Grupos.Grupo>;
}

<div class="glass-card mt-4 p-4">
    <h2 class="fw-bold mb-4">Grupos del Usuario: @Model.Nombre @Model.Apellido</h2>

    <form method="post" asp-action="AsignarGrupos">
        <input type="hidden" name="usuarioId" value="@Model.Id" />

        <div class="list-group col-md-6">
            @foreach (var g in grupos)
            {
                <label class="list-group-item">
                    <input type="checkbox"
                           name="gruposSeleccionados"
                           value="@g.Id"
                           @(Model.Grupos.Any(x => x.Id == g.Id) ? "checked" : "") />
                    @g.Nombre
                </label>
            }
        </div>

        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary">Guardar</button>
            <a asp-action="IndexUsuarios" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>
