@{
    ViewData["Title"] = "Crear Grupo";
}

<div class="overlay-dark p-4">
    <div class="container d-flex justify-content-center">

        <!-- Card principal centrada -->
        <div class="card card-custom text-light shadow-lg rounded-4 border-secondary p-4 w-100" style="max-width: 600px;">

            <!-- Encabezado -->
            <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
                <div>
                    <h2 class="text-light fw-bold mb-1 text-center">Crear Nuevo Grupo</h2>
                    <p class="text-secondary mb-0 text-center">Alta de grupo y configuración de permisos</p>
                </div>

                <div class="d-flex justify-content-center gap-2 mt-2 mt-md-0">
                    <a asp-controller="Administrador" asp-action="Dashboard"
                       class="btn btn-outline-light btn-rounded shadow-sm">
                        Volver al Inicio
                    </a>
                </div>
            </div>

            <!-- Formulario -->
            <form asp-action="Crear" method="post">

                <div class="mb-3">
                    <label class="form-label fw-semibold">Nombre del Grupo</label>
                    <input type="text" name="nombre" class="form-control-custom" required />
                </div>

                <div class="d-flex justify-content-center gap-2 mt-3">
                    <button type="submit" class="btn btn-success btn-rounded shadow-sm">
                        Crear
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light btn-rounded shadow-sm">
                        Volver
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>
