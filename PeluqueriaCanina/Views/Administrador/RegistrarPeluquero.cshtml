@using PeluqueriaCanina.Models.ClasesDePeluquero
@using PeluqueriaCanina.Models.Users
@model Peluquero
@{
    ViewData["Title"] = "RegistrarPeluquero";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg rounded-3">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">Registrar Nuevo Peluquero</h3>

                    <form asp-action="RegistrarPeluquero" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Nombre</label>
                                <input type="text" name="nombre" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Apellido</label>
                                <input type="text" name="apellido" class="form-control" required />
                            </div>
                        </div>

                        <div class="mt-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="mail" class="form-control" required />
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-6">
                                <label class="form-label">DNI</label>
                                <input type="text" name="dni" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Fecha de Nacimiento</label>
                                <input type="date" name="fechaDeNacimiento" class="form-control" required />
                            </div>
                        </div>

                        <h4 class="mt-4">Jornadas laborales</h4>
                        <div class="table-responsive mt-2">
                            <table class="table table-bordered align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Día</th>
                                        <th>Activo</th>
                                        <th>Hora de Inicio</th>
                                        <th>Hora de Fin</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < 6; i++)
                                    {
                                        <tr>
                                            <td>
                                                @((DiasLaborales)i)
                                                <input type="hidden" name="jornadas[@i].Dia" value="@((DiasLaborales)i)" />
                                            </td>
                                            <td class="text-center">
                                                <input type="checkbox" class="form-check-input" name="jornadas[@i].Activo" value="true" />
                                            </td>
                                            <td>
                                                <input type="time" class="form-control" name="jornadas[@i].HoraDeInicio" />
                                            </td>
                                            <td>
                                                <input type="time" class="form-control" name="jornadas[@i].HoraDeFin" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
