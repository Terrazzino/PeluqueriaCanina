@using PeluqueriaCanina.Models.ClasesDePeluquero
@using PeluqueriaCanina.Models.Users
@model Peluquero

<div class="overlay-dark p-4">
    <div class="container">

        <!-- Encabezado -->
        <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
            <div>
                <h2 class="text-light fw-bold mb-1">Registrar Nuevo Peluquero</h2>
                <p class="text-secondary mb-0">Alta de personal y configuración inicial</p>
            </div>

            <div class="d-flex gap-2 mt-2 mt-md-0">
                <a asp-controller="Administrador"
                   asp-action="Dashboard"
                   class="btn btn-outline-light btn-rounded shadow-sm">
                    Volver al Inicio
                </a>
            </div>
        </div>

        <!-- Card principal -->
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">

                <div class="card card-custom text-light shadow-lg rounded-4 border-secondary">
                    <div class="card-body p-4">

                        <h3 class="text-center mb-4 fw-bold">Datos del Peluquero</h3>

                        <!-- Foto del peluquero -->
                        <div class="text-center mb-4">
                            <img src="URL_DE_IMAGEN_DEL_PELUQUERO"
                                 class="rounded-circle peluquero-img shadow-sm">
                            <p class="text-secondary small mt-2">(Opcional)</p>
                        </div>

                        <form asp-action="RegistrarPeluquero" method="post">

                            <!-- Datos personales -->
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Nombre</label>
                                    <input type="text" name="nombre" class="form-control-custom" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Apellido</label>
                                    <input type="text" name="apellido" class="form-control-custom" required />
                                </div>
                            </div>

                            <div class="mt-3">
                                <label class="form-label fw-semibold">Email</label>
                                <input type="email" name="mail" class="form-control-custom" required />
                            </div>

                            <div class="row g-3 mt-1">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">DNI</label>
                                    <input type="text" name="dni" class="form-control-custom" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Fecha de Nacimiento</label>
                                    <input type="date" name="fechaDeNacimiento" class="form-control-custom" required />
                                </div>
                            </div>

                            <!-- Jornadas laborales -->
                            <h4 class="mt-4 fw-bold">Jornadas Laborales</h4>

                            <div class="table-responsive mt-2">
                                <table class="table table-ranking align-middle rounded-3 overflow-hidden shadow-sm">
                                    <thead class="table-gradient text-light text-center">
                                        <tr>
                                            <th>Día</th>
                                            <th>Activo</th>
                                            <th>Hora Inicio</th>
                                            <th>Hora Fin</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < 6; i++)
                                        {
                                            <tr>
                                                <td class="fw-bold">
                                                    @((DiasLaborales)i)
                                                    <input type="hidden" name="jornadas[@i].Dia" value="@((DiasLaborales)i)" />
                                                </td>

                                                <td class="text-center">
                                                    <input type="checkbox" class="form-check-input" name="jornadas[@i].Activo" value="true" />
                                                </td>

                                                <td>
                                                    <input type="time" class="form-control-custom" name="jornadas[@i].HoraDeInicio" />
                                                </td>

                                                <td>
                                                    <input type="time" class="form-control-custom" name="jornadas[@i].HoraDeFin" />
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Botón enviar -->
                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-success btn-lg btn-rounded shadow">
                                    Registrar Peluquero
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
