@using PeluqueriaCanina.Models.ClasesDePeluquero
@using PeluqueriaCanina.Models.Users
@model Peluquero

@{
    ViewData["Title"] = "RegistrarPeluquero";
}

<div class="container mt-5">

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-light fw-bold mb-1">➕ Registrar Nuevo Peluquero</h2>
            <p class="text-secondary mb-0">Alta de personal y configuración inicial</p>
        </div>

        <a asp-controller="Administrador" asp-action="Dashboard"
           class="btn btn-outline-light shadow-sm">
            ⬅️ Volver al Inicio
        </a>
    </div>

    <!-- Tarjeta principal -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card bg-dark text-light shadow-lg rounded-4 border-secondary">
                <div class="card-body p-4">

                    <h3 class="text-center mb-4">Datos del Peluquero</h3>

                    <!-- ESPACIO PARA IMAGEN -->
                    <div class="text-center mb-4">
                        <!-- 🔵 Colocar aquí la URL de una imagen (opcional) -->
                        <img src="URL_DE_IMAGEN_DEL_PELUQUERO"
                             class="rounded-circle border border-secondary shadow-sm"
                             style="width:110px;height:110px;object-fit:cover;">
                    </div>

                    <form asp-action="RegistrarPeluquero" method="post">

                        <div class="row g-3">

                            <div class="col-md-6">
                                <label class="form-label">Nombre</label>
                                <input type="text" name="nombre"
                                       class="form-control bg-dark text-light border-secondary" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Apellido</label>
                                <input type="text" name="apellido"
                                       class="form-control bg-dark text-light border-secondary" required />
                            </div>

                        </div>

                        <div class="mt-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="mail"
                                   class="form-control bg-dark text-light border-secondary" required />
                        </div>

                        <div class="row g-3 mt-1">

                            <div class="col-md-6">
                                <label class="form-label">DNI</label>
                                <input type="text" name="dni"
                                       class="form-control bg-dark text-light border-secondary" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Fecha de Nacimiento</label>
                                <input type="date" name="fechaDeNacimiento"
                                       class="form-control bg-dark text-light border-secondary" required />
                            </div>

                        </div>

                        <h4 class="mt-4">Jornadas Laborales</h4>

                        <div class="table-responsive mt-2">
                            <table class="table table-dark table-hover align-middle rounded-3 overflow-hidden shadow-sm">
                                <thead class="table-gradient">
                                    <tr>
                                        <th>Día</th>
                                        <th>Activo</th>
                                        <th>Hora de Inicio</th>
                                        <th>Hora de Fin</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @for (int i = 0; i < 6; i++)
                                    {
                                        <tr>
                                            <td class="fw-bold">
                                                @((DiasLaborales)i)
                                                <input type="hidden"
                                                       name="jornadas[@i].Dia"
                                                       value="@((DiasLaborales)i)" />
                                            </td>

                                            <td class="text-center">
                                                <input type="checkbox"
                                                       class="form-check-input"
                                                       name="jornadas[@i].Activo"
                                                       value="true" />
                                            </td>

                                            <td>
                                                <input type="time"
                                                       class="form-control bg-dark text-light border-secondary"
                                                       name="jornadas[@i].HoraDeInicio" />
                                            </td>

                                            <td>
                                                <input type="time"
                                                       class="form-control bg-dark text-light border-secondary"
                                                       name="jornadas[@i].HoraDeFin" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg shadow">
                                Registrar
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .table-gradient {
        background: linear-gradient(135deg, #1c1c1c, #272727);
    }

    table.table-dark tbody tr:hover {
        background-color: #2d3238 !important;
        transition: 0.2s ease-in-out;
    }
</style>
