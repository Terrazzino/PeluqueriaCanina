@using PeluqueriaCanina.Models.Users
@model Peluquero

@{
    ViewData["Title"] = "EditarPeluquero";
}

<div class="container mt-5">
    <div class="card bg-dark text-light shadow-lg rounded-4 p-4 border-0">

        <!-- Título -->
        <h2 class="fw-bold mb-4 text-center" style="letter-spacing:1px;">
            ✂ Editar Peluquero
        </h2>

        <!-- Imagen opcional -->
        <!-- ⬇⬇⬇ PONÉ ACÁ LA FOTO DEL PELUQUERO SI QUERÉS -->
        <!-- <img src="RUTA_DE_LA_IMAGEN"
             class="img-fluid d-block mx-auto rounded-3 mb-4"
             style="max-height:180px; object-fit:cover;" /> -->
        <!-- ⬆⬆⬆ FIN IMAGEN -->

        <form asp-action="EditarPeluquero" method="post">

            <input type="hidden" asp-for="Id" />

            <!-- Nombre -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Nombre</label>
                <input asp-for="Nombre" class="form-control bg-secondary text-light border-0" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Apellido -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Apellido</label>
                <input asp-for="Apellido" class="form-control bg-secondary text-light border-0" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>

            <!-- Mail -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Mail</label>
                <input asp-for="Mail" class="form-control bg-secondary text-light border-0" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <!-- Jornadas -->
            <h4 class="mt-4 mb-3 fw-bold">📅 Jornadas laborales</h4>

            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover rounded-3 overflow-hidden">
                    <thead class="bg-secondary text-light">
                        <tr>
                            <th>Día</th>
                            <th class="text-center">Activo</th>
                            <th>Hora de Inicio</th>
                            <th>Hora de Fin</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < Model.Jornadas.Count; i++)
                        {
                            <tr>
                                <td class="fw-semibold">
                                    @Model.Jornadas[i].Dia
                                    <input type="hidden" asp-for="Jornadas[@i].Id" />
                                    <input type="hidden" asp-for="Jornadas[@i].Dia" />
                                </td>

                                <td class="text-center">
                                    <input type="checkbox" asp-for="Jornadas[@i].Activo"
                                           class="form-check-input" />
                                </td>

                                <td>
                                    <input type="time" asp-for="Jornadas[@i].HoraDeInicio"
                                           class="form-control bg-secondary text-light border-0" />
                                </td>

                                <td>
                                    <input type="time" asp-for="Jornadas[@i].HoraDeFin"
                                           class="form-control bg-secondary text-light border-0" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Botones -->
            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-success rounded-3 px-4 fw-semibold">
                    Guardar cambios
                </button>

                <a asp-action="ListarPeluqueros" class="btn btn-outline-light rounded-3 px-4">
                    Cancelar
                </a>
            </div>

        </form>
    </div>
</div>
