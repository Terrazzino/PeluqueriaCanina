@using PeluqueriaCanina.Models.Users
@model Peluquero

@{
    ViewData["Title"] = "Editar Peluquero";
}

<div class="overlay-dark">

    <div class="container d-flex justify-content-center">

        <div class="card card-custom text-light border-0 p-4 col-lg-7">

            <!-- Título -->
            <h2 class="fw-bold mb-4 text-center card-title">
                ✂ Editar Peluquero
            </h2>

            <form asp-action="EditarPeluquero" method="post">

                <input type="hidden" asp-for="Id" />

                <!-- Nombre -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Apellido -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Apellido</label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <!-- Mail -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Mail</label>
                    <input asp-for="Mail" class="form-control" />
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <!-- Jornadas -->
                <h4 class="mt-4 mb-3 fw-bold">📅 Jornadas laborales</h4>

                <div class="table-responsive">
                    <table class="table table-dark table-striped table-hover text-light">
                        <thead>
                            <tr>
                                <th>Día</th>
                                <th class="text-center">Activo</th>
                                <th>Hora de Inicio</th>
                                <th>Hora de Fin</th>
                            </tr>
                        </thead>

                        <tbody>
                            @for (int i = 0; i < Model.Jornadas.Count; i++)
                            {
                                <tr>
                                    <td class="fw-semibold">
                                        @Model.Jornadas[i].Dia
                                        <input type="hidden" asp-for="Jornadas[@i].Id" />
                                        <input type="hidden" asp-for="Jornadas[@i].Dia" />
                                    </td>

                                    <td class="text-center">
                                        <input type="checkbox"
                                               asp-for="Jornadas[@i].Activo"
                                               class="form-check-input" />
                                    </td>

                                    <td>
                                        <input type="time"
                                               asp-for="Jornadas[@i].HoraDeInicio"
                                               class="form-control" />
                                    </td>

                                    <td>
                                        <input type="time"
                                               asp-for="Jornadas[@i].HoraDeFin"
                                               class="form-control" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Botones -->
                <div class="mt-4 d-flex gap-2 justify-content-center">
                    <button type="submit" class="btn btn-success btn-rounded px-4 fw-semibold">
                        Guardar cambios
                    </button>

                    <a asp-action="ListarPeluqueros" class="btn btn-outline-light btn-rounded px-4">
                        Cancelar
                    </a>
                </div>

            </form>

        </div>

    </div>

</div>
