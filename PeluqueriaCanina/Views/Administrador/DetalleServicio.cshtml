@{
    ViewData["Title"] = "Detalle del servicio " + ViewBag.Servicio;
}

<div class="overlay-dark p-4">
    <div class="container d-flex justify-content-center">

        <!-- Card principal centrada -->
        <div class="card card-custom text-light shadow-lg rounded-4 p-4 w-100" style="max-width: 800px;">

            <!-- Encabezado -->
            <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
                <h2 class="text-light fw-bold mb-1 text-center w-100">
                    Peluqueros que más realizaron @ViewBag.Servicio
                </h2>

                <div class="d-flex justify-content-center mt-2 w-100">
                    <a asp-action="Reportes"
                       class="btn btn-outline-light btn-rounded shadow-sm">
                        Volver al reporte principal
                    </a>
                </div>
            </div>

            <!-- Gráfico -->
            <div class="table-responsive mt-3">
                <canvas id="graficoPeluqueros" style="max-height: 420px; width: 100%;"></canvas>
            </div>

        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const peluqueros = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.Peluqueros ?? new List<string>()));
        const cantidades = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.Cantidades ?? new List<int>()));
        const servicio = "@Html.Raw(ViewBag.Servicio ?? "")";

        const ctx = document.getElementById('graficoPeluqueros').getContext('2d');

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: peluqueros,
                datasets: [{
                    label: 'Cantidad de ' + servicio,
                    data: cantidades,
                    backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                onClick: (evt, elements) => {
                    if (elements.length > 0) {
                        const index = elements[0].index;
                        const peluquero = peluqueros[index];
                        window.location.href =
                            `@Url.Action("DetallePeluquero", "Administrador")?servicio=${encodeURIComponent(servicio)}&peluquero=${encodeURIComponent(peluquero)}`;
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { stepSize: 1, color: 'white' }
                    },
                    x: { ticks: { color: 'white' } }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        titleColor: '#000',
                        bodyColor: '#000'
                    }
                }
            }
        });
    </script>
}
