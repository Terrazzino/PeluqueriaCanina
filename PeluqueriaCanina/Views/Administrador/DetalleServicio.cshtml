@{
    ViewData["Title"] = "Detalle del servicio " + ViewBag.Servicio;
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0 text-center">💈 Peluqueros que más realizaron @ViewBag.Servicio</h4>
        </div>
        <div class="card-body text-center">
            <canvas id="graficoPeluqueros" style="max-height:400px"></canvas>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Reportes" class="btn btn-secondary">⬅ Volver al reporte principal</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const peluqueros = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.Peluqueros ?? new List<string>()));
        const cantidades = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.Cantidades ?? new List<int>()));
        const servicio = "@Html.Raw(ViewBag.Servicio ?? "")";

        const ctx = document.getElementById('graficoPeluqueros').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: peluqueros,
                datasets: [{
                    label: 'Cantidad de ' + servicio,
                    data: cantidades,
                    backgroundColor: 'rgba(75, 192, 192, 0.7)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                onClick: (evt, elements) => {
                    if (elements.length > 0) {
                        const index = elements[0].index;
                        const peluquero = peluqueros[index];
                        window.location.href = `@Url.Action("DetallePeluquero", "Administrador")?servicio=${encodeURIComponent(servicio)}&peluquero=${encodeURIComponent(peluquero)}`;
                    }
                },
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                },
                plugins: { legend: { display: false } }
            }
        });
    </script>
}
