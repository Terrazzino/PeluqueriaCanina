@{
    ViewData["Title"] = "Dashboard";
}
<header class="dashboard-header">
    <div class="header-btns-container">
        <a asp-controller="Perfil" asp-action="MiPerfil" class="header-btn">
            <i class="bi bi-person-circle"></i> Mi Perfil
        </a>

        <a asp-controller="Auth" asp-action="Logout" class="header-btn logout">
            <i class="bi bi-box-arrow-right"></i> Cerrar sesión
        </a>
    </div>
</header>
<!-- CONTENIDO CENTRAL -->
<main class="dashboard-container fade-in">

    <div class="glass dashboard-panel">
        <h2 class="dashboard-title">Panel de Administración</h2>
        <p class="dashboard-subtitle">Elegí qué sección querés gestionar</p>

        <div class="dashboard-grid">

            <a asp-action="ListarPeluqueros" class="dash-card">
                <i class="bi bi-scissors card-icon"></i>
                <span>Gestionar Peluqueros</span>
            </a>

            <a asp-controller="Servicio" asp-action="Index" class="dash-card">
                <i class="bi bi-list-check card-icon"></i>
                <span>Gestionar Servicios</span>
            </a>

            <a asp-controller="Grupo" asp-action="Index" class="dash-card">
                <i class="bi bi-people card-icon"></i>
                <span>Gestionar Grupos</span>
            </a>

            <a asp-controller="Administrador" asp-action="Usuarios" class="dash-card">
                <i class="bi bi-shield-lock card-icon"></i>
                <span>Permisos de Usuarios</span>
            </a>

            <a asp-action="Reportes" class="dash-card">
                <i class="bi bi-bar-chart card-icon"></i>
                <span>Ver Reportes</span>
            </a>

            <a asp-controller="Valoraciones" asp-action="ListadoGeneral" class="dash-card">
                <i class="bi bi-star-half card-icon"></i>
                <span>Valoraciones</span>
            </a>

            <a asp-controller="Administrador" asp-action="Auditoria" class="dash-card">
                <i class="bi bi-journal-text card-icon"></i>
                <span>Ver Auditoría</span>
            </a>

        </div>

    </div>

</main>
