@model IEnumerable<dynamic>

<div class="overlay-dark p-4">
    <div class="container">

        <!-- Encabezado -->
        <div class="d-flex justify-content-between align-items-center flex-wrap mb-4">
            <div>
                <h2 class="text-light fw-bold mb-1">Listado de Peluqueros</h2>
                <p class="text-secondary mb-0">Gestión del personal y horarios</p>
            </div>

            <div class="d-flex gap-2 mt-2 mt-md-0">
                <a asp-controller="Administrador" asp-action="Dashboard"
                   class="btn btn-outline-light btn-rounded shadow-sm">
                    Volver
                </a>

                <a asp-action="RegistrarPeluquero"
                   class="btn btn-primary btn-rounded shadow-sm">
                    Registrar Peluquero
                </a>
            </div>
        </div>

        <!-- Card contenedora -->
        <div class="card card-custom text-light">
            <div class="card-body p-0">

                <table class="table table-dark table-hover align-middle mb-0">
                    <thead class="table-header-gradient text-center">
                        <tr>
                            <th style="width: 65px;">Foto</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Mail</th>
                            <th>Jornadas</th>
                            <th style="width: 160px;">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <!-- Foto -->
                                <td class="text-center">
                                    <div class="peluquero-img-wrapper">
                                        <img src="/Multimedia/Peluquero.jpg"
                                             class="peluquero-img shadow-sm" />
                                    </div>
                                </td>

                                <td class="fw-bold">@p.Nombre</td>
                                <td>@p.Apellido</td>
                                <td class="text-info">@p.Mail</td>

                                <!-- Jornadas como mini-tabla -->
                                <td>
                                    <table class="table table-sm table-borderless mb-0 text-light">
                                        <tbody>
                                            @foreach (var j in p.Jornadas)
                                            {
                                                if (j.HoraDeInicio != j.HoraDeFin && j.Activo)
                                                {
                                                    <tr>
                                                        <td class="fw-semibold">@j.Dia</td>
                                                        <td>@j.HoraDeInicio - @j.HoraDeFin</td>
                                                        <td><span class="badge bg-success">Activo</span></td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </td>

                                <!-- Acciones -->
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="EditarPeluquero" asp-route-id="@p.Id"
                                           class="btn btn-sm btn-outline-warning btn-rounded shadow-sm w-100">
                                            Editar
                                        </a>

                                        <a asp-action="EliminarPeluquero" asp-route-id="@p.Id"
                                           class="btn btn-sm btn-outline-danger btn-rounded shadow-sm w-100"
                                           onclick="return confirm('¿Seguro que deseas eliminar a este peluquero?');">
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</div>
