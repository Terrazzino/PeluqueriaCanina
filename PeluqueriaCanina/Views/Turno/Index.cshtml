@model List<PeluqueriaCanina.Models.ClasesDeTurno.Turno>

@{
    ViewData["Title"] = "Mis Turnos";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">📅 Mis Turnos</h4>
            <div>
                <a asp-controller="Cliente" asp-action="Dashboard" class="btn btn-secondary me-2">
                    ⬅️ Volver al Inicio
                </a>
                <a href="/Pago/MisPagos" class="btn btn-light btn-sm me-2">
                    💳 Mis Pagos
                </a>
                <a href="/Turno/Crear" class="btn btn-light btn-sm">
                    ➕ Reservar Turno
                </a>
            </div>
        </div>

        <div class="card-body">
            @Html.AntiForgeryToken()

            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-info text-center mb-0">
                    Todavía no tenés turnos reservados.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-success">
                            <tr>
                                <th>Mascota</th>
                                <th>Peluquero</th>
                                <th>Servicio</th>
                                <th>Fecha</th>
                                <th>Hora</th>
                                <th>Estado</th>
                                <th>Precio</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var turno in Model)
                            {
                                <tr>
                                    <td>@turno.Mascota.Nombre</td>
                                    <td>@turno.Peluquero.Nombre @turno.Peluquero.Apellido</td>
                                    <td>@turno.Servicio.NombreDelServicio</td>
                                    <td>@turno.FechaHora.ToString("dd/MM/yyyy")</td>
                                    <td>@turno.FechaHora.ToString("HH:mm")</td>

                                    <td>
                                        @switch (turno.Estado.ToString())
                                        {
                                            case "Pendiente":
                                                <span class="badge bg-warning text-dark">Pendiente</span>
                                                break;
                                            case "Confirmado":
                                                <span class="badge bg-success">Confirmado</span>
                                                break;
                                            case "Completado":
                                                <span class="badge bg-info">Completado</span>
                                                break;
                                            case "Cancelado":
                                                <span class="badge bg-danger">Cancelado</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@turno.Estado</span>
                                                break;
                                        }
                                    </td>

                                    <td><strong>$@turno.Precio</strong></td>

                                    <td class="text-center">
                                        <div class="btn-group">
                                            @if (turno.Estado != PeluqueriaCanina.Models.ClasesDeCliente.EstadoTurno.Cancelado)
                                            {
                                                <button class="btn btn-warning btn-sm"
                                                        onclick="modificarTurno(@turno.Id, '@turno.PeluqueroId', '@turno.Duracion.TotalMinutes')">
                                                    ✏️
                                                </button>

                                                <button class="btn btn-danger btn-sm"
                                                        onclick="cancelarTurno(@turno.Id)">
                                                    ❌
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>

        /* ============================================================
         * 🔥 Función auxiliar para manejar errores AJAX
         * ============================================================ */
        function handleAjaxError(xhr) {
            let msg = "Ocurrió un error inesperado.";

            if (xhr.responseJSON?.message) msg = xhr.responseJSON.message;
            else if (xhr.status === 400) msg = "El turno se superpone con otro existente.";
            else if (xhr.status === 404) msg = "El turno no existe.";
            else if (xhr.status === 500) msg = "Error interno del servidor.";

            Swal.fire({
                icon: "error",
                title: "Error",
                text: msg
            });
        }

        /* ============================================================
         * ❌ Cancelar turno
         * ============================================================ */
        function cancelarTurno(id) {
            Swal.fire({
                title: "¿Cancelar turno?",
                text: "Esta acción no se puede deshacer.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#6c757d",
                confirmButtonText: "Sí, cancelar"
            }).then((result) => {
                if (!result.isConfirmed) return;

                $.post(`/Turno/Cancelar/${id}`, function (response) {
                    if (response.ok) {
                        Swal.fire("Cancelado", response.message, "success")
                            .then(() => location.reload());
                    } else {
                        Swal.fire("Error", response.message, "error");
                    }
                }).fail(handleAjaxError);
            });
        }

        /* ============================================================
         * ✏️ Modificar Turno
         * ============================================================ */
        function modificarTurno(turnoId, peluqueroId, duracionMinutos) {

            duracionMinutos = Number(duracionMinutos);

            const horas = Math.floor(duracionMinutos / 60);
            const minutos = duracionMinutos % 60;
            const slotDuration = `${String(horas).padStart(2,'0')}:${String(minutos).padStart(2,'0')}:00`;

            Swal.fire({
                title: "Seleccioná un nuevo horario",
                html: `<div id="calendarMod" style="min-height:400px;border:1px solid #ddd;"></div>`,
                width: "800px",
                showCancelButton: true,
                confirmButtonText: "Guardar",
                cancelButtonText: "Cancelar",

                preConfirm: () => {
                    const selected = window.calendarMod?.selectedStart;

                    if (!selected) {
                        Swal.showValidationMessage("Debés seleccionar un horario.");
                        return false;
                    }

                    if (selected.getTime() < new Date().getTime()) {
                        Swal.showValidationMessage("No podés elegir una fecha pasada.");
                        return false;
                    }

                    return true;
                },

                didOpen: () => {

                    const calendarEl = document.getElementById("calendarMod");

                    const calendar = new FullCalendar.Calendar(calendarEl, {
                        initialView: "timeGridWeek",
                        slotDuration: slotDuration,
                        slotLabelInterval: slotDuration,
                        allDaySlot: false,
                        slotMinTime: "09:00:00",
                        slotMaxTime: "18:00:00",
                        locale: "es",
                        selectable: true,
                        nowIndicator: true,
                        validRange: { start: new Date() },

                        events: function(fetchInfo, successCallback) {
                            $.getJSON('/Turno/GetDisponibilidad', {
                                peluqueroId: peluqueroId,
                                start: fetchInfo.startStr,
                                end: fetchInfo.endStr,
                                duracion: duracionMinutos
                            })
                            .done(successCallback)
                            .fail(() => {
                                Swal.fire("Error", "No se pudo cargar la disponibilidad.", "error");
                                successCallback([]);
                            });
                        },

                        eventClick: function(info) {
                            if (info.event.title !== "Disponible") return;

                            calendar.getEvents().forEach(e => {
                                if (e.title === "Disponible") {
                                    e.setProp("backgroundColor", "#28a745");
                                }
                            });

                            info.event.setProp("backgroundColor", "#007bff");

                            calendar.selectedStart = info.event.start;
                        }
                    });

                    calendar.render();
                    window.calendarMod = calendar;
                }

            }).then((result) => {

                if (!result.isConfirmed) return;

                Swal.fire({
                    title: "Guardando...",
                    text: "Por favor esperá",
                    allowOutsideClick: false,
                    showConfirmButton: false,
                    didOpen: () => Swal.showLoading()
                });

                $.ajax({
                    url: "/Turno/Modificar",
                    method: "POST",
                    data: {
                        id: turnoId,
                        fechaHora: window.calendarMod.selectedStart.toISOString(),
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },

                    success: function (response) {
                        Swal.fire({
                            icon: "success",
                            title: "Turno modificado",
                            text: response.message || "El turno fue actualizado."
                        }).then(() => location.reload());
                    },

                    error: handleAjaxError
                });
            });
        }
    </script>
}
