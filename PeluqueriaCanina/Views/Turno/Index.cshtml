@using PeluqueriaCanina.Models.ClasesDeCliente
@model List<PeluqueriaCanina.Models.ClasesDeTurno.Turno>

@{
    ViewData["Title"] = "Mis Turnos";
}

<div class="glass-card mt-4">

    <!-- Header -->
    <div class="header d-flex justify-content-between align-items-center mb-4">
        <h3 class="title text-success">Mis Turnos</h3>
        <div class="actions">
            <a asp-controller="Cliente" asp-action="Dashboard" class="btn-outline">Volver al Inicio</a>
            <a href="/Pago/MisPagos" class="btn-light-sm">Mis Pagos</a>
            <a href="/Turno/Crear" class="btn-light-sm">Reservar Turno</a>
        </div>
    </div>

    @Html.AntiForgeryToken()

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert-info text-center mb-0">
            Todavía no tenés turnos reservados.
        </div>
    }
    else
    {
        <div class="table-container">
            <table class="table-dark table-hover align-middle">
                <thead>
                    <tr>
                        <th>Mascota</th>
                        <th>Peluquero</th>
                        <th>Servicio</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Estado</th>
                        <th>Precio</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var turno in Model)
                    {
                        <tr>
                            <td>@turno.Mascota.Nombre</td>
                            <td>@turno.Peluquero.Nombre @turno.Peluquero.Apellido</td>
                            <td>@turno.Servicio.NombreDelServicio</td>
                            <td>@turno.FechaHora.ToString("dd/MM/yyyy")</td>
                            <td>@turno.FechaHora.ToString("HH:mm")</td>
                            <td>
                                <span class="badge-estado @(turno.Estado switch
                                      {
                                          EstadoTurno.Pendiente => "pendiente",
                                          EstadoTurno.Confirmado => "confirmado",
                                          EstadoTurno.Completado => "completado",
                                          EstadoTurno.Cancelado => "cancelado",
                                          _ => "otro"
                                      })">
                            @turno.EstadoActual.Nombre
                        </span>
                    </td>
                    <td><strong>$@turno.Precio</strong></td>
                    <td class="text-center">
                        <div class="btn-group">
                            @if (turno.EstadoActual.PuedeModificar)
                                    {
                                        <button class="btn-warning-sm" onclick="modificarTurno(@turno.Id, '@turno.PeluqueroId', '@turno.Duracion.TotalMinutes')">
                                            Editar
                                        </button>
                                    }
                                    @if (turno.EstadoActual.PuedeCancelar)
                                    {
                                        <button class="btn-danger-sm" onclick="cancelarTurno(@turno.Id)">
                                            Cancelar
                                        </button>
                                    }
                                    @if (turno.EstadoActual.PuedeValorar)
                                    {
                                        @if (turno.Valoracion == null)
                                        {
                                            <a class="btn-success-sm" href="/Valoraciones/Crear?turnoId=@turno.Id">Valorar</a>
                                        }
                                        else
                                        {
                                            <span class="badge-estado valorado">Valorado (@turno.Valoracion.Puntuacion ★)</span>
                                        }
                                    }
                                    @if (!turno.EstadoActual.PuedeModificar &&
                                                                !turno.EstadoActual.PuedeCancelar &&
                                                                !turno.EstadoActual.PuedeValorar)
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    /* Card estilo glass */
    .glass-card {
        background: rgba(28,28,28,0.85);
        backdrop-filter: blur(10px);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.4);
        color: #f0f0f0;
    }

    /* Header */
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .title {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .actions a {
        margin-left: 0.5rem;
        text-decoration: none;
    }

    /* Botones */
    .btn-outline {
        padding: 0.4rem 0.8rem;
        border-radius: 8px;
        border: 1px solid #f0f0f0;
        color: #f0f0f0;
        font-weight: 500;
        transition: all 0.2s;
    }

        .btn-outline:hover {
            background: #f0f0f0;
            color: #1c1c1c;
        }

    .btn-light-sm {
        padding: 0.3rem 0.6rem;
        border-radius: 8px;
        background: #ddd;
        color: #1c1c1c;
        font-size: 0.85rem;
        margin-left: 0.5rem;
        transition: all 0.2s;
    }

        .btn-light-sm:hover {
            background: #ccc;
        }

    .btn-warning-sm {
        background: #ffc107;
        color: #1c1c1c;
        border: none;
        padding: 0.3rem 0.5rem;
        border-radius: 6px;
        margin-right: 0.25rem;
        font-size: 0.85rem;
        cursor: pointer;
    }

        .btn-warning-sm:hover {
            background: #e0a800;
        }

    .btn-danger-sm {
        background: #dc3545;
        color: #fff;
        border: none;
        padding: 0.3rem 0.5rem;
        border-radius: 6px;
        margin-right: 0.25rem;
        font-size: 0.85rem;
        cursor: pointer;
    }

        .btn-danger-sm:hover {
            background: #c82333;
        }

    .btn-success-sm {
        background: #28a745;
        color: #fff;
        border: none;
        padding: 0.3rem 0.5rem;
        border-radius: 6px;
        font-size: 0.85rem;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-success-sm:hover {
            background: #36c157;
        }

    /* Table dark */
    .table-dark {
        width: 100%;
        border-collapse: collapse;
    }

        .table-dark th, .table-dark td {
            padding: 0.75rem;
            border-bottom: 1px solid #444;
        }

        .table-dark thead {
            background: #198754;
            color: #fff;
            font-weight: 600;
        }

    .table-hover tbody tr:hover {
        background: rgba(40,40,40,0.7);
    }

    /* Badges de estado */
    .badge-estado {
        padding: 0.25rem 0.6rem;
        border-radius: 8px;
        font-size: 0.75rem;
        font-weight: 600;
        display: inline-block;
        min-width: 70px;
        text-align: center;
    }

        .badge-estado.pendiente {
            background: #ffc107;
            color: #1c1c1c;
        }

        .badge-estado.confirmado {
            background: #28a745;
            color: #fff;
        }

        .badge-estado.completado {
            background: #17a2b8;
            color: #fff;
        }

        .badge-estado.cancelado {
            background: #dc3545;
            color: #fff;
        }

        .badge-estado.otro {
            background: #6c757d;
            color: #fff;
        }

        .badge-estado.valorado {
            background: #0d6efd;
            color: #fff;
        }

    /* Table container para scroll si es necesario */
    .table-container {
        overflow-x: auto;
    }
</style>
