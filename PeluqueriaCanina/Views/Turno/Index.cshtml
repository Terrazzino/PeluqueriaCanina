@model List<PeluqueriaCanina.Models.ClasesDeTurno.Turno>

@{
    ViewData["Title"] = "Mis Turnos";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">📅 Mis Turnos</h4>
            <div>
                <a href="/Pago/MisPagos" class="btn btn-light btn-sm me-2">
                    💳 Mis Pagos
                </a>
                <a href="/Turno/Crear" class="btn btn-light btn-sm">
                    ➕ Reservar Turno
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-info text-center mb-0">
                    Todavía no tenés turnos reservados.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-success">
                            <tr>
                                <th scope="col">Mascota</th>
                                <th scope="col">Peluquero</th>
                                <th scope="col">Servicio</th>
                                <th scope="col">Fecha</th>
                                <th scope="col">Hora</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Precio</th>
                                <th scope="col" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var turno in Model)
                            {
                                <tr>
                                    <td>@turno.Mascota.Nombre</td>
                                    <td>@turno.Peluquero.Nombre @turno.Peluquero.Apellido</td>
                                    <td>@turno.Servicio.NombreDelServicio</td>
                                    <td>@turno.FechaHora.ToString("dd/MM/yyyy")</td>
                                    <td>@turno.FechaHora.ToString("HH:mm")</td>
                                    <td>
                                        @switch (turno.Estado.ToString())
                                        {
                                            case "Pendiente":
                                                <span class="badge bg-warning text-dark">Pendiente</span>
                                                break;
                                            case "Confirmado":
                                                <span class="badge bg-success">Confirmado</span>
                                                break;
                                            case "Completado":
                                                <span class="badge bg-info">Completado</span>
                                                break;
                                            case "Cancelado":
                                                <span class="badge bg-danger">Cancelado</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@turno.Estado</span>
                                                break;
                                        }
                                    </td>
                                    <td><strong>$@turno.Precio</strong></td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (turno.Estado != PeluqueriaCanina.Models.ClasesDeCliente.EstadoTurno.Cancelado)
                                            {

                                                <button class="btn btn-sm btn-warning" onclick="modificarTurno(@turno.Id, '@turno.PeluqueroId','@turno.Duracion.TotalMinutes')" title="Modificar">
                                                    ✏️
                                                </button>

                                                <button class="btn btn-sm btn-danger" onclick="cancelarTurno(@turno.Id)" title="Cancelar">
                                                    ❌
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function cancelarTurno(id) {
            Swal.fire({
                title: "¿Cancelar turno?",
                text: "Esta acción no se puede deshacer.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#6c757d",
                confirmButtonText: "Sí, cancelar"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post(`/Turno/Cancelar/${id}`, function (response) {
                        if (response.ok) {
                            Swal.fire("Cancelado", response.message, "success")
                                .then(() => location.reload());
                        } else {
                            Swal.fire("Error", response.message, "error");
                        }
                    });
                }
            });
        }

        function modificarTurno(turnoId, peluqueroId, duracionMinutos) {

            duracionMinutos = Number(duracionMinutos);

            let horas = Math.floor(duracionMinutos / 60);
            let minutos = duracionMinutos % 60;
            let slotDuration = `${String(horas).padStart(2,'0')}:${String(minutos).padStart(2,'0')}:00`;

            Swal.fire({
                title: 'Seleccioná un nuevo horario',
                html: `<div id="calendarMod" style="min-height:400px;border:1px solid #ddd;"></div>`,
                width: '800px',
                showCancelButton: true,
                confirmButtonText: 'Guardar',
                cancelButtonText: 'Cancelar',
                preConfirm: () => {
                    if (!window.calendarMod || !window.calendarMod.selectedDate) {
                        Swal.showValidationMessage('Debés seleccionar un horario disponible');
                        return false;
                    }

                    const selectedDate = new Date(window.calendarMod.selectedDate);
                    const now = new Date();

                    if (selectedDate < now) {
                        Swal.showValidationMessage('No podés seleccionar un horario en el pasado');
                        return false;
                    }

                    return true;
                },
                didOpen: () => {
                    const calendarEl = document.getElementById('calendarMod');
                    const calendar = new FullCalendar.Calendar(calendarEl, {
                        initialView: 'timeGridWeek',
                        slotDuration: slotDuration,
                        slotLabelInterval: slotDuration,
                        allDaySlot: false,
                        slotMinTime: "09:00:00",
                        slotMaxTime: "18:00:00",
                        locale: 'es',
                        selectable: true,
                        nowIndicator: true,
                        validRange: {
                            start: new Date()
                        },
                        events: function(fetchInfo, successCallback) {
                            $.getJSON('/Turno/GetDisponibilidad', {
                                peluqueroId: peluqueroId,
                                start: fetchInfo.startStr,
                                end: fetchInfo.endStr,
                                duracion: duracionMinutos
                            }).done(function(data) {
                                successCallback(data);
                            }).fail(function(xhr, status, error) {
                                console.error('Error al cargar disponibilidad:', error);
                                Swal.fire('Error', 'No se pudo cargar la disponibilidad. Intentá de nuevo.', 'error');
                                successCallback([]);
                            });
                        },
                        eventClick: function(info) {
                            if (info.event.title === "Disponible") {
                                calendar.selectedDate = info.event.startStr;
                                calendar.getEvents().forEach(e => {
                                    if (e.title === "Disponible") e.setProp("backgroundColor", "#28a745");
                                });
                                info.event.setProp("backgroundColor", "#007bff");
                            }
                        }
                    });

                    calendar.render();
                    window.calendarMod = calendar;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Guardando...',
                        text: 'Por favor esperá',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        showConfirmButton: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    $.ajax({
                        url: '/Turno/Modificar',
                        method: 'POST',
                        data: {
                            id: turnoId,
                            fechaHora: window.calendarMod.selectedDate,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Éxito',
                                text: response.message || 'Turno modificado correctamente.',
                                confirmButtonText: 'OK'
                            }).then(() => location.reload());
                        },
                        error: function(xhr, status, error) {
                            let errorMessage = 'Ocurrió un problema al modificar el turno';

                            if (xhr.responseJSON && xhr.responseJSON.message) {
                                errorMessage = xhr.responseJSON.message;
                            } else if (xhr.responseText) {
                                try {
                                    const response = JSON.parse(xhr.responseText);
                                    if (response.message) {
                                        errorMessage = response.message;
                                    }
                                } catch (e) {
                                    console.error('Error al parsear respuesta:', e);
                                }
                            }

                            if (xhr.status === 400) {
                                errorMessage = errorMessage || 'El turno se superpone con otro existente.';
                            } else if (xhr.status === 404) {
                                errorMessage = 'El turno no existe.';
                            } else if (xhr.status === 500) {
                                errorMessage = 'Error del servidor. Por favor, intentá más tarde.';
                            }

                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: errorMessage,
                                confirmButtonText: 'OK'
                            });
                        }
                    });
                }
            });
        }
    </script>
}
}